@model IEnumerable<PDFManipulations.Models.FileDetailsModel>
<style type="text/css">
   

    .container2 {
        height: 100%;
        width: 100%;
        margin: 20px auto;
    }

</style>
<br />
<h2>Highlighted pdf</h2><br>
<div class="container2" id="container2"></div>
<table class="table table-bordered">
    <tr>
        <th class="col-md-4">
            @Html.DisplayName("Highlighted pdf text is before pdf extension")
        </th>
        <th class="col-md-4">
            @Html.DisplayName("Path")
        </th>
    </tr>
    @if (Model != null)
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FileName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FileTextContent)
                </td>
            </tr>
        }
    }
</table>


